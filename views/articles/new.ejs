<h2>Submit new article </h2>

<form method="POST" action="/articles">
	<div class="form-group">
		<label for="name">title</label><br>
		<input class="new-content" type="text" name="title" required>
	</div>
	<div class="form-group">
		<label for="name">content</label><br>
		<textarea class="new-content" name="content" required></textarea>
	</div>
	<div class="form-group">
		<label for="name">Author</label>
		<select name="authorId" class="form-control" required>
			<option value="0"> Choose your name below </option>
			<% if (authors) { %>
			<% authors.forEach(function(a){ %>
			<option value="<%=a.id%>">
			<%= a.name %>
		</option>
		<%})%>
		<% } %>
	</select>
	Don't see your name?
	<a href="/authors/new">Register here</a>
</div>
<div class="form-group">
	<label for="tags">Tags:</label><br>
		<input type="text" name="tags" class="form-control" placeholder="Tag a subject (separate by commas)!">
</div>
	<input type="submit" class="btn btn-primary" value="Post">
</form>